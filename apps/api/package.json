{
  "name": "api.lomi.africa",
  "version": "1.0.1",
  "description": "Official Node.js SDK for lomi.'s payment infrastructure",
  "main": "src/server.ts",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:webhook": "ts-node scripts/test-webhook.ts",
    "verify:types": "ts-node scripts/verify-types.ts",
    "verify:endpoints": "ts-node scripts/verify-endpoints.ts",
    "verify:all": "npm run verify:types && npm run verify:endpoints",
    "generate:spec": "ts-node openapi/generate/generate-spec.ts",
    "generate:types": "npm run verify:types && ts-node scripts/generate-types.ts",
    "generate:client": "npm run verify:endpoints && ts-node scripts/generate-client.ts",
    "generate:all": "npm run verify:all && npm run generate:types && npm run generate:client",
    "generate:docs": "npx @redocly/cli build-docs openapi/spec.yaml --config redocly.yaml -o docs/index.html --title \"lomi. â€” API Reference\" --theme.openapi.disableSearch=false --theme.openapi.hideLoading=true",
    "generate:llm-docs": "node scripts/generate-llm-docs.js",
    "lint": "eslint . --ext .ts",
    "format": "bunx --bun prettier --write \"src/**/*.{ts,tsx,js,jsx,css,md,json}\"",
    "prepublishOnly": "npm run build",
    "vercel-build": "npm run build"
  },
  "keywords": [
    "lomi",
    "payments",
    "mobile money",
    "orange money",
    "wave",
    "orange",
    "wave",
    "mtn",
    "cli",
    "api",
    "sdk",
    "nodejs",
    "typescript",
    "vite",
    "react",
    "react-native"
  ],
  "author": "lomi.africa",
  "docs": "redocly bundle openapi/spec.yaml -o docs/index.html",
  "clean": "rimraf dist",
  "repository": {
    "type": "git",
    "url": "https://github.com/lomiafrica/api.lomi.africa"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.84.0",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/swagger-ui-express": "^4.1.8",
    "axios": "^1.13.2",
    "change-case": "^4.1.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "docx": "^9.5.1",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^6.11.2",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "js-yaml": "^4.1.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "node-fetch": "^3.3.2",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.18.3",
    "yaml": "^2.8.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.19.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "license": "UNLICENSED",
  "private": true
}
