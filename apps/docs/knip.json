{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": [
        "app/**/*.{ts,tsx,js,jsx}",
        "pages/**/*.{ts,tsx,js,jsx}",
        "next.config.mjs",
        "middleware.{ts,js}",
        "instrumentation.{ts,js}",
        "api/**/*.{ts,tsx,js,jsx}",
        "scripts/**/*.{ts,tsx,js,jsx}"
      ],
      "project": [
        "app/**/*.{ts,tsx,js,jsx}",
        "components/**/*.{ts,tsx,js,jsx}",
        "lib/**/*.{ts,tsx,js,jsx}",
        "content/**/*.{ts,tsx,js,jsx}",
        "scripts/**/*.{ts,tsx,js,jsx}",
        "api/**/*.{ts,tsx,js,jsx}"
      ],
      "paths": {
        "@/*": ["./*"],
        "@/components/*": ["components/*"],
        "@/lib/*": ["lib/*"],
        "@/hooks/*": ["lib/hooks/*"],
        "@/utils/*": ["lib/utils/*"],
        "@/types/*": ["lib/types/*"],
        "@/content/*": ["content/*"]
      },
      "ignore": [
        "**/*.d.ts",
        "**/*.config.*",
        "**/node_modules/**",
        "**/dist/**",
        "**/build/**",
        "**/.next/**",
        "**/.nuxt/**",
        "**/.vuepress/**",
        "**/.cache/**",
        "**/.temp/**",
        "**/.tmp/**",
        "**/coverage/**",
        "**/*.test.{ts,tsx,js,jsx}",
        "**/*.spec.{ts,tsx,js,jsx}",
        "**/*.stories.{ts,tsx,js,jsx}",
        "**/stories/**",
        "**/__tests__/**",
        "**/__mocks__/**",
        "**/mocks/**",
        "studio/**"
      ],
      "ignoreExportsUsedInFile": true,
      "treatRulesAsErrors": false
    }
  },
  "rules": {
    "files": "error",
    "exports": "warn",
    "types": "warn",
    "nsExports": "warn",
    "nsTypes": "warn",
    "enumMembers": "warn",
    "classMembers": "warn",
    "duplicates": "error"
  }
}
